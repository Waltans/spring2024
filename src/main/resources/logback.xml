<configuration>

    <!-- Уровень логирования: INFO -->
    <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

    <!-- Аппендер для записи в файл -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/application.log</file> <!-- Путь к файлу логов -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern> <!-- Формат записи -->
        </encoder>
    </appender>

    <!-- Корневой логгер -->
    <root level="INFO">
        <appender-ref ref="FILE" /> <!-- Использовать аппендер для записи в файл -->
    </root>

</configuration>
